{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "g++",
            "args": [
                "-std=c++20",
                "-I",
                "${workspaceFolder}",
                "-g",
                "${workspaceFolder}/include/*/*.cpp",
                "${workspaceFolder}/${fileBasenameNoExtension}.cpp",
                //"${workspaceFolder}/src/*.cpp",
                "-o",
                "${workspaceFolder}/${fileBasenameNoExtension}"
            ],
            "windows": {
                "args": [
                    "-std=c++20",
                    "-I",
                    //"${workspaceFolder}\\include",
                    //"${workspaceFolder}\\include",
                    "${workspaceFolder}",
                    "-o",
                    "${workspaceFolder}\\release\\x64\\Windows\\${fileBasenameNoExtension}.exe",
                    "-g",
                    /*
                    "${workspaceFolder}\\src\\${fileBasenameNoExtension}.cpp",
                    "${workspaceFolder}\\include\\configuration\\processjsonconfiguration.cpp",
                    "${workspaceFolder}\\include\\configuration\\startupprogram.cpp",
                    "${workspaceFolder}\\include\\file\\file.cpp",
                    "${workspaceFolder}\\include\\logs\\logger.cpp",
                    "${workspaceFolder}\\include\\logs\\processlogger.cpp",
                    "${workspaceFolder}\\include\\process\\process.cpp",
                    "${workspaceFolder}\\include\\process\\processcontroller.cpp",
                    "${workspaceFolder}\\include\\process\\processcpu.cpp",
                    "${workspaceFolder}\\include\\process\\processdisk.cpp",
                    "${workspaceFolder}\\include\\process\\processinfo.cpp",
                    "${workspaceFolder}\\include\\process\\processnetwork.cpp",
                    "${workspaceFolder}\\include\\process\\processsupervision.cpp",
                    */
                    "-lws2_32",
                    "-liphlpapi"
                ]
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ]
}